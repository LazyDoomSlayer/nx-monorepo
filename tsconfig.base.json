{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "baseUrl": ".",
    "paths": {
      "@org/ui": ["libs/ui/src/index.ts"],
      "@org/shared/types": ["libs/shared/types/src/index.ts"],
      "@org/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@org/shared/config": ["libs/shared/config/src/index.ts"],
      "@org/shared/constants": ["libs/shared/constants/src/index.ts"]
    }
  }
}
